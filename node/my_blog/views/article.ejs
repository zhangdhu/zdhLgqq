<%- include header %>

<div class="post">
    <h5 class="author text-muted">
        <% if(user && user.name === post.name) { %>
        <a href="/edit/<%= post.name %>/<%= post.time %>/<%= post.title %>" class="btn btn-warning btn-xs">编辑</a>
        <% } %>
        <img class="avatar" src="/user.jpg" alt=""/> <a href="/u/<%= post.name %>"><%= post.name %></a>发布于<%= post.date %>
        | 浏览数: <%= post.pv %>
    </h5>
    <br/>
    <br/>
    <p id = "postCon">
       
    </p>

    <div class="tags">
        <hr/>
        <% post.tags.forEach(function(v) { %>
        <span class="badge"><%= v %></span>
        <% }) %>
    </div>
</div>

<input type="hidden" value="<%- post.post %>" id="postContent">

<%- include comment %>

<%- include footer %>
<script type="text/javascript">
    $(document).ready(function() {
          $("#postCon").html($("#postContent").val())
    })
</script>